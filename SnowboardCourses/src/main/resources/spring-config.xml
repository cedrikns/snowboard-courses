<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personDAO" class="ru.tsedrik.dao.map.PersonDAOImpl">
    </bean>
    <bean id="locationDAO" class="ru.tsedrik.dao.map.LocationDAOImpl">
    </bean>
    <bean id="groupDAO" class="ru.tsedrik.dao.map.GroupDAOImpl">
    </bean>
    <bean id="courseDAO" class="ru.tsedrik.dao.map.CourseDAOImpl">
    </bean>

    <bean id="personService" class="ru.tsedrik.service.PersonServiceImpl" autowire="constructor">
        <constructor-arg index="0" ref="personDAO"/>
    </bean>
    <bean id="groupService" class="ru.tsedrik.service.GroupServiceImpl" autowire="constructor">
        <constructor-arg index="0" ref="groupDAO"/>
    </bean>
    <bean id="courseService" class="ru.tsedrik.service.CourseServiceImpl" autowire="byType">
        <property name="courseDAO" ref="courseDAO" />
    </bean>

</beans>